    "firebase-admin": "^11.10.1",
    "lodash-es": "^4.17.21",
    "nanoid": "^4.0.2",
    "nprogress": "^0.2.0",
    "postmark": "^4.0.2",
    "tailwind-merge": "^1.14.0"
  }
